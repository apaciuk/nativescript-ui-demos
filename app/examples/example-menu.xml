<drawer:RadSideDrawer xmlns="http://www.nativescript.org/tns.xsd" 
    xmlns:drawer="nativescript-ui-sidedrawer" 
    id="example-menu-drawer" 
    loaded="drawerLoaded" 
    drawerOpened="drawerOpened" 
    drawerClosed="drawerClosed" 
    drawerLocation="Bottom" 
    drawerContentSize="104">
    <drawer:RadSideDrawer.drawerContent>
        <StackLayout class="example-menu-stack">
            <Button text="Example information" 
                class="example-menu-item" 
                tap="informationTap" />
            <Button text="View code" 
                class="example-menu-item" 
                tap="codeTap" />
        </StackLayout>
    </drawer:RadSideDrawer.drawerContent>
</drawer:RadSideDrawer>
